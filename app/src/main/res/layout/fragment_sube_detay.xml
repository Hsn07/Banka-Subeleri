<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sube"
            type="com.hbacakk.banka.data.models.Sube" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarktone"
        tools:context=".ui.fragmentSubeDetay.SubeDetayFragment">


        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/background_oval_light"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:ems="3"
                android:fontFamily="@font/poppins_bold"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="@{sube.Sehir, default=Sehir}"
                android:textColor="@color/white"
                android:textSize="@dimen/_17ssp" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="@dimen/_10sdp"
            android:backgroundTint="@color/colorLightone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:text="@{sube.BankaKodu.substring(0,3)}"
                        android:background="@drawable/background_oval"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text='@{sube.BankaSube.split("/")[0]}'
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_15ssp"
                            android:fontFamily="@font/poppins_bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:ems="3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text='@{sube.BankaTipi}'
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_11ssp"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:includeFontPadding="false"
                            android:ems="3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text='@{sube.Ilce+"/"+sube.Sehir}'
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_13ssp"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:includeFontPadding="false"
                            android:ems="3"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{sube.BankaSube}'
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:includeFontPadding="false"
                    android:ems="3"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{sube.BankaKodu}'
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:includeFontPadding="false"
                    android:ems="3"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{sube.BolgeKoordinatorlugu}'
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:includeFontPadding="false"
                    android:ems="3"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{sube.EnYakinAtm}'
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:includeFontPadding="false"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:backgroundTint="@color/colorDarktone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5sdp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:ellipsize="end"
                            android:ems="3"
                            android:fontFamily="@font/poppins_semibold"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text='@{sube.AdresAdi}'
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_13ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text='@{sube.Adres}'
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_13ssp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@drawable/background_location"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            >

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:includeFontPadding="false"
                                android:text="Adres Tarifi"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:textColor="@color/colorWhite" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_navigation" />
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>